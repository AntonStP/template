mixin carousel__item(content, params)
  +pug-mixin(params.mixin, content, params).carousel__item.swiper-slide(class=params.item)

mixin carousel(content, p)
  if typeof p === 'object'
    -
      params = {mixin: p.mixin}
      id = p.id 
  .carousel(class=`swiper-container_${id}`).swiper-container&attributes(attributes)
    .swiper-wrapper
      +pug-list(content, 'carousel__item', params)
    block
