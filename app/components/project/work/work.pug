mixin work(content,params)
    section.work&attributes(content.attr||false)&attributes(attributes)
        .work__bg 
            .work__working
                +picture(content.working)
        .work__content 
            .work__text
                p !{content.text.p1}
                p !{content.text.p2}
                p !{content.text.p3}
            .work__advantages 
                +carousel(content.advantages, {mixin:"work__advantage", id:"1"})
                .work__advantages-pagination
            .work__photos
                +carousel(content.photos, {mixin:"work__photo", id:"2"})
                .work__photos-bar
                    .work__photos-nav.work__photos-nav_prev
                        include arrow.svg
                    .work__photos-pagination
                    .work__photos-nav.work__photos-nav_next
                        include arrow.svg


mixin work__advantage(content,params)
    .work__advantage&attributes(content.attr||false)&attributes(attributes)
        .work__advantage-icon 
            if (content.id == "1")
                include icon-1.svg
            if (content.id == "2")
                include icon-2.svg
            if (content.id == "3")
                include icon-3.svg
            if (content.id == "4")
                include icon-4.svg
        .work__advantage-name !{content.name}
        .work__advantage-description !{content.description}

mixin work__photo(content,params)
    .work__photo&attributes(content.attr||false)&attributes(attributes)
        +picture(content.image)